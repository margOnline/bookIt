<h3> Bookings for <%%= @resource.name %></h3>
<table>
  <tr>
    <th>Start</th>
    <th>End</th>
  </tr>
  
  <%% @bookings.each do |booking| %>
  <tr>
    <td>
      <%%= booking.start_time.strftime('%e %b %Y %H:%M%p') %>
    </td>
    <td>
      <%%= booking.calculate_end_time.strftime('%e %b %Y %H:%M%p') %>
    </td>
    <td><%%= link_to "Delete", resource_booking_path(@resource, booking), data: { confirm: 'Are you sure?' }, method: :delete %>
    </td>
    <td><%%= link_to "Edit", edit_resource_booking_path(@resource, booking) %>
    </td>
  </tr>
  <%% end %>
</table>